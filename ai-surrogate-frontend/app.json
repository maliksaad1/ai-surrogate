{
  "expo": {
    "name": "AI Surrogate",
    "slug": "ai-surrogate",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "backgroundColor": "#0A0A0A",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aisurrogate.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice chat with your AI companion.",
        "NSCameraUsageDescription": "This app may use the camera for future features."
      }
    },
    "android": {
      "package": "com.aisurrogate.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}