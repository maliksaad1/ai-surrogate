{
  "expo": {
    "name": "AI Surrogate",
    "slug": "ai-surrogate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "backgroundColor": "#0A0A0A",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aisurrogate.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice chat with your AI companion.",
        "NSCameraUsageDescription": "This app may use the camera for future features."
      }
    },
    "android": {
      "package": "com.aisurrogate.app",
      "icon": "./assets/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "89d9aee3-295e-400c-92e5-240018eed870"
      }
    },
    "owner": "adadssa"
  }
}
